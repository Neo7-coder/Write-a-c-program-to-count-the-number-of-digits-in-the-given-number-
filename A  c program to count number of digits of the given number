// A c program to count number of digits in the given number
#include <stdio.h>
void main()
{
    printf("Enter the number \n");
    int n, i , d ,c=0;
    scanf( " %d",&n);
    i=n;
    while(i!=0)
    {
        d = i%10;
        c = c+1;
        i =i/10;
    }
    printf(" the number of the digits in the given number is = %d",c);
}
